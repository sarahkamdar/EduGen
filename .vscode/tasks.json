{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Backend",
      "type": "shell",
      "command": "venv\\Scripts\\activate; python -m uvicorn app.main:app --reload",
      "options": {
        "cwd": "${workspaceFolder}\\backend",
        "shell": {
          "executable": "powershell.exe",
          "args": ["-NoProfile", "-Command"]
        }
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^ERROR"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "INFO:.*Uvicorn running",
          "endsPattern": "INFO:.*Application startup complete"
        }
      },
      "presentation": {
        "group": "edugen",
        "panel": "dedicated",
        "reveal": "always"
      }
    },
    {
      "label": "Start Frontend",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}\\frontend"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^ERROR"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE",
          "endsPattern": "Local:"
        }
      },
      "presentation": {
        "group": "edugen",
        "panel": "dedicated",
        "reveal": "always"
      }
    },
    {
      "label": "Start EDUGEN",
      "dependsOn": ["Start Backend", "Start Frontend"],
      "dependsOrder": "parallel",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "label": "Stop Backend",
      "type": "shell",
      "command": "Get-NetTCPConnection -LocalPort 8000 -ErrorAction SilentlyContinue | Select-Object -ExpandProperty OwningProcess | ForEach-Object { Stop-Process -Id $_ -Force -ErrorAction SilentlyContinue }; Write-Host 'Backend stopped.'",
      "options": {
        "shell": {
          "executable": "powershell.exe",
          "args": ["-NoProfile", "-Command"]
        }
      },
      "presentation": {
        "group": "edugen-stop",
        "panel": "shared",
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "label": "Stop Frontend",
      "type": "shell",
      "command": "Get-NetTCPConnection -LocalPort 3000 -ErrorAction SilentlyContinue | Select-Object -ExpandProperty OwningProcess | ForEach-Object { Stop-Process -Id $_ -Force -ErrorAction SilentlyContinue }; Write-Host 'Frontend stopped.'",
      "options": {
        "shell": {
          "executable": "powershell.exe",
          "args": ["-NoProfile", "-Command"]
        }
      },
      "presentation": {
        "group": "edugen-stop",
        "panel": "shared",
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "label": "Stop EDUGEN",
      "dependsOn": ["Stop Backend", "Stop Frontend"],
      "dependsOrder": "parallel",
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    }
  ]
}
